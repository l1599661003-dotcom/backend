# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=clothing_mini_program
DB_USER=root
DB_PASSWORD=your_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT密钥
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# 微信小程序配置
WECHAT_APPID=your_appid
WECHAT_SECRET=your_secret

# 微信支付配置
WECHAT_PAY_MCHID=your_mchid
WECHAT_PAY_KEY=your_pay_key
WECHAT_PAY_CERT_PATH=./certs/apiclient_cert.pem
WECHAT_PAY_KEY_PATH=./certs/apiclient_key.pem

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# 腾讯云COS配置（可选）
COS_SECRET_ID=
